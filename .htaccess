Options -Indexes

<FilesMatch "^(config|logs|src|database)">
    Require all denied
</FilesMatch>

RewriteEngine On
RewriteBase /the-robboeb-library/

# Redirect root to home page
RewriteRule ^$ /the-robboeb-library/public/home.php [L]
RewriteRule ^index\.php$ /the-robboeb-library/public/home.php [L]

ErrorDocument 404 /the-robboeb-library/public/404.php
